<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.tps.mapper.TaskFeedbackMapper">
    
    <resultMap type="TaskFeedback" id="TaskFeedbackResult">
        <result property="feedbackId"    column="feedback_id"    />
        <result property="taskId"    column="task_id"    />
        <result property="status"    column="status"    />
        <result property="comment"    column="comment"    />
        <result property="attachments"    column="attachments"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>

    <sql id="selectTaskFeedbackVo">
        select feedback_id, task_id, status, comment, attachments, create_by, create_time from task_feedback
    </sql>

    <select id="selectTaskFeedbackList" parameterType="TaskFeedback" resultMap="TaskFeedbackResult">
        <include refid="selectTaskFeedbackVo"/>
        <where>  
            <if test="taskId != null "> and task_id = #{taskId}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="comment != null  and comment != ''"> and comment = #{comment}</if>
            <if test="attachments != null  and attachments != ''"> and attachments = #{attachments}</if>
        </where>
    </select>
    
    <select id="selectTaskFeedbackByFeedbackId" parameterType="Long" resultMap="TaskFeedbackResult">
        <include refid="selectTaskFeedbackVo"/>
        where feedback_id = #{feedbackId}
    </select>

    <insert id="insertTaskFeedback" parameterType="TaskFeedback" useGeneratedKeys="true" keyProperty="feedbackId">
        insert into task_feedback
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="taskId != null">task_id,</if>
            <if test="status != null">status,</if>
            <if test="comment != null">comment,</if>
            <if test="attachments != null">attachments,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="taskId != null">#{taskId},</if>
            <if test="status != null">#{status},</if>
            <if test="comment != null">#{comment},</if>
            <if test="attachments != null">#{attachments},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
         </trim>
    </insert>

    <update id="updateTaskFeedback" parameterType="TaskFeedback">
        update task_feedback
        <trim prefix="SET" suffixOverrides=",">
            <if test="taskId != null">task_id = #{taskId},</if>
            <if test="status != null">status = #{status},</if>
            <if test="comment != null">comment = #{comment},</if>
            <if test="attachments != null">attachments = #{attachments},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where feedback_id = #{feedbackId}
    </update>

    <delete id="deleteTaskFeedbackByFeedbackId" parameterType="Long">
        delete from task_feedback where feedback_id = #{feedbackId}
    </delete>

    <delete id="deleteTaskFeedbackByFeedbackIds" parameterType="String">
        delete from task_feedback where feedback_id in 
        <foreach item="feedbackId" collection="array" open="(" separator="," close=")">
            #{feedbackId}
        </foreach>
    </delete>
</mapper>